rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /recipes/{recipeId} {
      allow read: if true; // everyone can read all recipes
      allow create: if request.auth != null; // authenticated
      allow update, delete: if request.auth != null && (
        request.auth.token.admin == true || // optional: custom claim
        resource.data.uid == request.auth.uid || // own data
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin" // or admin
      );
    }
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    match /favorites/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
